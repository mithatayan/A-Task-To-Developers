@model Galaxy.Models.TBL_TASK
@{
    ViewBag.Title = "AddTask";
    Layout = "~/Views/Shared/_TaskLayout.cshtml";
}

<h2>Task Oluştur</h2>
<br />
<form class="form-group" method="post">
    <div style="margin-bottom:5px">
        @Html.LabelFor(x => x.TASK_NAME)
        @Html.TextBoxFor(x => x.TASK_NAME, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:5px">
        @Html.LabelFor(x => x.LEVEL_ID)
        @Html.TextBoxFor(x => x.LEVEL_ID, new { @class = "form-control" })
    </div>
    <p><strong>NOT : İş Zorluk Seviyesi Giriniz: </strong></p>
    <p>1 ile 8 arasında bir değer girebilirsiniz.</p>
    <ul>
        <li>1-Full Stack Developer</li>
        <li>2-C# Developer</li>
        <li>3-C++ Developer</li>
        <li>4-Fronted Developer</li>
        <li>5-Backend Developer</li>
        <li>6-Java Developer</li>
        <li>7-Python Developer</li>
        <li>8-Database Admin</li>
    </ul>
    <button class="btn btn-info">Kaydet</button> <br /> <br />
</form>